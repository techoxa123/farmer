<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#daaa31" />
            <gradient android:angle="-90" android:startColor="#38a655" android:endColor="#0b3b63"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#b94836" />
            <solid android:color="#063256"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <gradient android:angle="-90" android:startColor="#04d2e9" android:endColor="#0a1d23" />
        </shape>
    </item>
</selector>